# Database Configuration (for direct MongoDB connection)
MONGODB_URI=mongodb://localhost:27017/motion-magic

# Backend API Configuration (for proxy approach)
BACKEND_API_URL=http://localhost:5000/api

# Authentication
JWT_SECRET=your-secret-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Email Service (for verification emails)
RESEND_API_KEY=your-resend-api-key-here
EMAIL_FROM=noreply@motionmagic.space

# Application Settings
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Admin Configuration
ADMIN_API_KEY=your-admin-api-key-change-this-in-production
ADMIN_INITIAL_PASSWORD=change-this-password-in-production

# Enable/Disable Features
# Use "true" or "false" values
ENABLE_AUTH=true
ENABLE_EMAIL_VERIFICATION=true 